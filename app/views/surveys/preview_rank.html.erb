<h1> Survey Preview </h1>

<h2><%= @survey.name %></h2>

<%= form_tag(rank_survey_path) %>
<% @question_set.each do |q, answers| %>
  <% question_number = @question_set.index([q, answers]) + 1 %>
  <h6><%= question_number%>) <%=q[2] %></h6>
  <% if q[1] == "Multiple Choice" %>
    <div class="row">
      <div class="col s6 field input-field">
        <%= select_tag "#{q[0]}", options_for_select(answers),  multiple: true %>
      </div>
      <div class="col s6">
        <h6> Ranking: <%= q[3] %> </h6>
      </div>
    </div>

  <% elsif q[1] == "Drop-Down" %>
    <div class="row">
      <div class="col s6 field input-field">
        <%= select_tag "#{q[0]}", options_for_select(answers) %>
      </div>
      <div class="col s6">
        <h6> Ranking: <%= q[3] %> </h6>
      </div>
    </div>
  <% elsif q[1] == "Open Response" %>
    <div class="row">
      <div class="col s6 field input-field">
        <%= text_field_tag "#{q[0]}" %>
      </div>
      <div class="col s6">
        <h6> Ranking: <%= q[3] %> </h6>
      </div>
    </div>
  <% end %>
<% end %>

<%= link_to "Edit Survey", edit_survey_path(params[:id]) %><br/>
<%= link_to "Return to Dashboard", organization_path(params[:id]) %>
